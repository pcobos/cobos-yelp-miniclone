<h2 class="text-center">Add a new restaurant</h2>
<div class="container d-flex justify-content-center">
  <div class="col-8 form border border-dark p-1 rounded">
    <%= simple_form_for @restaurant do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category %>
      <%= f.submit %>
    <% end %>
  </div>
</div>